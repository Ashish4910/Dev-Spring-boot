	<form th:action="@{/processForm}" th:method="POST"
		th:object="${customer}">

		First Name : <input type="text" th:field="*{firstName}"><br>
		Last Name(*) : <input type="text" th:field="*{lastName}">

		<!-- Add error Message if present -->
		<span th:if="${#fields.hasErrors('lastName')}" th:errors="*{lastName}"
			class="error"> </span> <br> <br> Free Passes : <input
			type="text" th:field="*{freePasses}">

		<!-- Add error msg if present  -->

		<span th:if="${#fields.hasErrors('freePasses')}"
			th:errors="*{freePasses}" class="error"></span> <br> <br>

		Postal Code : <input type="text" th:field="*{postalCode}">

		<!-- Add Error if present  -->
		<span th:if="${#fields.hasErrors('postalCode')}"
			th:errors="*{postalCode}" class="error"></span> <br> Course code
		: <input type="text" th:field="*{courseCode}">

		<!-- 	Add error if present  -->

		<span th:if="${#fields.hasErrors('courseCode')}"
			th:Errors="*{courseCode}" class="error"></span> <br> <input
			type="submit" value="submit">



	</form>
